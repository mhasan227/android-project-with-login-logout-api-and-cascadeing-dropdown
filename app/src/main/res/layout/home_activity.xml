<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/app_bar_main"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="189dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="Deposit"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="169dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"

        app:layout_constraintTop_toTopOf="@+id/textView"
        android:spinnerMode="dialog"
        android:prompt="@string/drop_down1"
        />



    <Spinner
        android:id="@+id/spinner1"

        android:layout_width="185dp"
        android:layout_height="46dp"
        android:layout_marginTop="124dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toEndOf="@+id/spinner"

        app:layout_constraintTop_toTopOf="@+id/app_bar_main"
        android:spinnerMode="dialog"
        android:prompt="@string/drop_down2"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/app_bar_main" />

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="676dp"

        android:text="Log Out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/infobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="676dp"
        android:text="Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="189dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4CAF50"
        android:text="Sale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <Button
        android:id="@+id/button3"
        android:layout_width="189dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"

        android:text="Sale"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="189dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"

        android:text="Deposit"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />


    <EditText
        android:id="@+id/editMoneyRecNum"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Invoice Number"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <EditText
        android:id="@+id/editTextInvoiceAmount"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Invoice amount"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/datePicker2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="Invoice Number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Invoice amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Choose a file"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="76dp"
        android:text="Invoice Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Followup  Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/datePicker"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:background="#d4d4d4"

        android:focusable="false"
        android:hint="Select Date..."
        android:padding="15dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/editMoneyRecNum" />

    <EditText
        android:id="@+id/datePicker2"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="4dp"

        android:layout_marginTop="4dp"
        android:background="#d4d4d4"
        android:focusable="false"
        android:hint="Select Date..."
        android:padding="15dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/datePicker" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#3F51B5"
        android:text="Save"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/browse"
        android:layout_width="120dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#FF9800"
        android:text="Browse"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/editTextInvoiceAmount" />

    <EditText
        android:id="@+id/editTextMoneyReNo"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Invoice Number"
        app:layout_constraintStart_toEndOf="@+id/textViewDepo3"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <EditText
        android:id="@+id/editTextDepositeAmount"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Deposite amount"
        app:layout_constraintStart_toEndOf="@+id/textViewDepo6"
        app:layout_constraintTop_toBottomOf="@+id/editTextMoneyReNo" />

    <TextView
        android:id="@+id/textViewDepo3"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="Money Recipt No"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <TextView
        android:id="@+id/textViewDepo6"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Deposite amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDepo3" />

    <TextView
        android:id="@+id/textViewDepo7"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Money Recipt Choose a file"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDepo4" />


    <TextView
        android:id="@+id/textViewDepo4"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Deposit Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDepo6" />

    <EditText
        android:id="@+id/datePickerdepo"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:background="#d4d4d4"

        android:focusable="false"
        android:hint="Select Date..."
        android:padding="15dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textViewDepo4"
        app:layout_constraintTop_toBottomOf="@+id/editTextDepositeAmount" />


    <Button
        android:id="@+id/saveDepo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#3F51B5"
        android:foregroundTint="#FFFFFF"
        android:text="Save"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDepo7" />

    <Button
        android:id="@+id/browseDepo"
        android:layout_width="120dp"
        android:layout_height="41dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#FF9800"
        android:text="Browse"
        app:layout_constraintStart_toEndOf="@+id/textViewDepo7"
        app:layout_constraintTop_toBottomOf="@+id/datePickerdepo" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="68dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:background="#146711"
        android:backgroundTint="#4CAF50"
        android:text="Success"
        android:textColor="#0E0E0E"
        app:layout_constraintStart_toEndOf="@+id/save"
        app:layout_constraintTop_toBottomOf="@+id/browse" />

    <TextView
        android:id="@+id/depoSuccess"
        android:layout_width="68dp"
        android:layout_height="27dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="#146711"
        android:backgroundTint="#4CAF50"
        android:text="Success"
        android:textColor="#0E0E0E"
        app:layout_constraintStart_toEndOf="@+id/saveDepo"
        app:layout_constraintTop_toBottomOf="@+id/browseDepo" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="85dp"
        android:layout_height="27dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="24dp"
        android:background="#D61212"
        android:text="Fail"
        android:textColor="#100F0F"
        android:textColorHighlight="#ECE1E1"
        app:layout_constraintStart_toEndOf="@+id/save"
        app:layout_constraintTop_toBottomOf="@+id/browse" />


    <TextView
        android:id="@+id/depoFail"
        android:layout_width="85dp"
        android:layout_height="27dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="20dp"
        android:background="#D61212"
        android:text="Fail"
        android:textColor="#100F0F"
        android:textColorHighlight="#ECE1E1"
        app:layout_constraintStart_toEndOf="@+id/saveDepo"
        app:layout_constraintTop_toBottomOf="@+id/browseDepo" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="175dp"
        android:layout_marginTop="556dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/app_bar_main">


        <ListView
            android:id="@+id/listView"
            android:layout_width="395dp"
            android:layout_height="56dp"

            android:dividerHeight="5dp"
            android:visibility="visible"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="59dp"
            tools:layout_editor_absoluteY="585dp"></ListView>

    </ScrollView>

    <ScrollView
        android:id="@+id/sd"
        android:layout_width="409dp"
        android:layout_height="175dp"
        android:layout_marginTop="556dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/app_bar_main">


        <ListView
            android:id="@+id/listViewDepo"
            android:layout_width="395dp"
            android:layout_height="56dp"

            android:dividerHeight="5dp"
            android:visibility="visible"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="59dp"
            tools:layout_editor_absoluteY="585dp"></ListView>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>